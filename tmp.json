{
  "apiVersion": "smarter.sh/v1",
  "kind": "SqlPlugin",
  "metadata": {
    "name": "sql_test",
    "description": "Query the Django User model to retrieve detailed account information about the admin account for the Smarter platform.",
    "version": "0.1.0",
    "tags": [],
    "annotations": null,
    "pluginClass": "sql"
  },
  "spec": {
    "prompt": {
      "provider": "openai",
      "systemRole": "You are a helpful assistant for Smarter platform. You can provide information about the admin account of the Smarter platform.\n",
      "model": "gpt-4-turbo",
      "temperature": 0.0,
      "maxTokens": 256
    },
    "selector": {
      "directive": "search_terms",
      "searchTerms": ["admin", "Smarter platform", "admin account"]
    },
    "sqlData": {
      "description": "Query the Django User model to retrieve detailed account information about the admin account for the Smarter platform.",
      "sqlData": {
        "description": "This SQL query retrieves the Django user record for the username provided.\n",
        "sqlQuery": "SELECT * FROM auth_user WHERE username = \"{username}\";\n",
        "parameters": [
          {
            "name": "unit",
            "type": "string",
            "description": "The temperature unit to use.",
            "required": false,
            "enum": ["Celsius", "Fahrenheit"],
            "default": null
          },
          {
            "name": "username",
            "type": "string",
            "description": "The username to query.",
            "required": true,
            "enum": null,
            "default": null
          }
        ],
        "testValues": [
          {
            "name": "username",
            "value": "admin"
          },
          {
            "name": "unit",
            "value": "Celsius"
          }
        ],
        "limit": 10
      }
    }
  },
  "status": {
    "created": "2025-06-25T17:47:19.109829+00:00",
    "modified": "2025-06-25T17:47:19.227796+00:00"
  }
}
